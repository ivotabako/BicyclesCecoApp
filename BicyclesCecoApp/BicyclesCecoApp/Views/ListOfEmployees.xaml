<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BicyclesCecoApp.Views.ListOfEmployees"
             xmlns:customerVm="clr-namespace:BicyclesCecoApp.ViewModels">
    <ContentPage.BindingContext>
        <customerVm:EmployeeViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <ListView ItemsSource="{Binding ListOfEmployees}"
                  ItemSelected="Handle_ItemSelected"
          HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10" Orientation="Horizontal">
                            <Label Text="{Binding BicycleId}"/>
                            <Label Text="{Binding FirstName}"/>
                            <Label Text="{Binding Shift}"/>
                            <Label Text="{Binding IsInUse}"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>